page {
  height: 100%;
  background-color: #21272e;
}
.wrap{
  margin: 20px;
}
.header{
  display: flex;
  height: 150px;
}
.head>image{
  width:150px;
  height: 150px;
}
.share>image{
  width: 20px;
  height: 20px;
}
.name{
  font-size: 20px;
  color: white;
}
.address,p{
