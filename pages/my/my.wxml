<!--pages/my/my.wxml-->
<view class="wrap">
  <view class="header">
    <view class="head" bindtap="shezhi">
      <image src="../../imgs/kenan.png"></image>
    </view>
    <view class="you">
      <view>
        <text class="name">李雪玲</text>
      </view>
      <view>
        <text class="address">中国.襄阳</text>
      </view>
      <view class="share">
        <image src="../../imgs/fenxiang.png"></image>
        <p>分享</p>
      </view>
    </view>
  </view>
  <view class="zhong">
    <view class="kuai" wx:for="{{zhong}}" wx:key="*this">
      <view>
        <text style="color:white">{{item.shuzi}}</text>
      </view>
      <view>
        <text style="color:#69737f">{{item.text}}</text>
      </view>
    </view>
  </view>
  <view class="down">
    <view class="every">
      <view class="list">
        <text class="listfirst">个人信息</text>
      </view>
      <view class="listimage">
        <image class="next" src="../../imgs/dayu.png"></image>
      </view>
    </view>
    <view class="every">
      <view class="list">
        <text class="listfirst">我的消息</text>
      </view>
      <view class="listimage">
        <image class="next" src="../../imgs/dayu.png"></image>
      </view>
    </view>
    <view class="every" bindtap="yue">
      <view class="list">
        <text class="listfirst">账户余额</text>
      </view>
      <view class="listimage">
        <image class="next" src="../../imgs/dayu.png"></image>
      </view>
    </view>
    <view class="every">
      <view class="list">
        <text class="listfirst">我的评论</text>
      </view>
      <view class="listimage">
        <image class="next" src="../../imgs/dayu.png"></image>
      </view>
    </view>
  </view>
</view>